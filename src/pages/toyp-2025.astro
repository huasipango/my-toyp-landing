---
import Layout from "../layouts/Layout.astro";
import React from "react";
import { HeroGeometric } from "@/components/ui/shape-landing-hero";
import { HeroTOYPInfoAndCTA } from "@/components/ui/hero-toyp-info";
import { FeaturesSectionWithHoverEffects } from "@/components/ui/feature-section-with-hover-effects";
import { AgendaTimeline } from "@/components/ui/agenda-timeline";
import "../styles/global.css";

const agendaItems = [
	{
		date: "2025-08-05",
		title: "Convocatoria",
		subtitle: "Hasta el 05 de agosto de 2025",
	},
	{
		date: "2025-08-10",
		title: "Evaluación y selección",
		subtitle: "Domingo 10 de agosto de 2025",
	},
	{
		date: "2025-08-11",
		title: "Notificación de ganadores",
		subtitle: "Lunes 11 de agosto de 2025",
	},
	{
		date: "2025-08-29",
		title: "Ceremonia de premiación presencial",
		subtitle: "Viernes 29 de agosto de 2025",
	},
];
---
<Layout>
  <!-- Header -->
  <header class="bg-[#18181b] py-6">
    <div class="container mx-auto flex items-center justify-between px-4">
      <div class="flex items-center">
        <!-- <img src="/logo-jci-white.svg" alt="JCI Santo Domingo" class="h-10" /> -->
        <h1 class="ml-4 text-2xl font-bold">TOYP 2025</h1>
      </div>
      <nav>
        <ul class="flex space-x-6 text-gray-300">
          <li><a href="#sobre" class="hover:text-white">Acerca</a></li>
          <li><a href="#categorias" class="hover:text-white">Categorías</a></li>
          <li><a href="#agenda" class="hover:text-white">Agenda</a></li>
          <li><a href="https://forms.gle/t5Ep41EKL3sJ5bzj7" class="hover:text-white">Postula</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <!-- Hero -->
  <section id="sobre">
    <HeroGeometric client:load badge="Inscripciones abiertas" title1="Los 10 Jóvenes" title2="Más Sobresalientes" />
  </section>

  <!-- ¿Qué es TOYP? y Call to Action (fusionados) -->
  <section id="sobre">
    <HeroTOYPInfoAndCTA client:load />
  </section>

  <!-- Categorías (FeaturesSectionWithHoverEffects) -->
  <section id="categorias" class="bg-[#121214] py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-semibold mb-8 text-white">Categorías</h2>
      <FeaturesSectionWithHoverEffects client:load />
    </div>
  </section>

  <!-- Agenda -->
  <section id="agenda" class="bg-[#121214] py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-semibold mb-6 text-white">Agenda</h2>
      <AgendaTimeline client:load items={agendaItems} />
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-[#18181b] py-8">
    <div class="container mx-auto px-4 text-center">
      <img src="/logo-jci-white.svg" alt="JCI Santo Domingo" class="h-20 mx-auto mb-4" />
      <p class="text-gray-400 mb-4">Desarrollando líderes para un mundo cambiante.</p>
      <div class="flex justify-center space-x-4">
        <a href="https://www.facebook.com/jci.santodomingo" class="text-gray-400 hover:text-white">Facebook</a>
        <a href="https://www.instagram.com/jcisantodomingo/" class="text-gray-400 hover:text-white">Instagram</a>
        <a href="https://www.tiktok.com/@jci.santodomingo" class="text-gray-400 hover:text-white">TikTok</a>
      </div>
      <p class="mt-6 text-sm text-gray-500">&copy; 2025 JCI Santo Domingo Tsáchilas</p>
    </div>
  </footer>
</Layout>

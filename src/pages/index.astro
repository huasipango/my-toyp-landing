---
// src/pages/index.astro
import React from "react";
import { HeroGeometric } from "@/components/ui/shape-landing-hero";
import { FeaturesSectionWithHoverEffects } from "@/components/ui/feature-section-with-hover-effects";
import { AgendaTimeline } from "@/components/ui/agenda-timeline";
import "../styles/global.css";

const categories = [
	{
		title: "Logros Empresariales",
		description:
			"Reconoce el crecimiento económico inclusivo y sostenible a través del emprendimiento.",
	},
	{
		title: "Asuntos Políticos, Legales y/o Gubernamentales",
		description:
			"Reconoce a quienes se destacan en la actividad política o de gobierno, trabajando por los ODS.",
	},
	{
		title: "Liderazgo y/o Logros Académicos",
		description:
			"Aporta a la educación con iniciativas o herramientas que mejoran el sistema educativo.",
	},
	{
		title: "Logros Culturales",
		description:
			"Premia a artistas cuya obra genera conciencia social con métodos innovadores.",
	},
	{
		title: "Liderazgo Ambiental",
		description:
			"Destaca soluciones sostenibles para reducir la huella de carbono.",
	},
	{
		title: "Logros Deportivos",
		description:
			"Reconoce a deportistas que son ejemplo de superación y excelencia.",
	},
	{
		title: "Liderazgo Humanitario y/o Voluntario",
		description:
			"Fomenta sociedades pacíficas e inclusivas mediante voluntariado.",
	},
	{
		title: "Desarrollo Científico y/o Tecnológico",
		description:
			"Impulsa la investigación y tecnologías que abordan desafíos sociales.",
	},
	{
		title: "Superación y/o Logros Personales (Discapacidad)",
		description:
			"Ejemplos de superación ante discapacidad o enfermedad catastrófica.",
	},
        {
                title: "Logro Profesional",
                description:
                        "Destaca cualidades que llevan a roles de liderazgo en sectores públicos y privados.",
        },
];

const agendaItems = [
        {
                date: "2025-07-31",
                title: "Convocatoria",
                subtitle: "Hasta el 31 de julio de 2025",
        },
        {
                date: "2025-08-10",
                title: "Evaluación y selección",
                subtitle: "Domingo 10 de agosto de 2025",
        },
        {
                date: "2025-08-11",
                title: "Notificación de ganadores",
                subtitle: "Lunes 11 de agosto de 2025",
        },
        {
                date: "2025-08-29",
                title: "Ceremonia de premiación",
                subtitle: "Viernes 29 de agosto de 2025 en Hotel Toachi",
        },
];
---

<html lang="es" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>TOYP Santo Domingo Tsáchilas</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body class="bg-[#030303] text-white font-inter antialiased">
		<!-- Header -->
		<header class="bg-[#18181b] py-6">
			<div
				class="container mx-auto flex items-center justify-between px-4"
			>
				<div class="flex items-center">
					<img
						src="/logo-jci-white.svg"
						alt="JCI Santo Domingo"
						class="h-10"
					/>
					<h1 class="ml-4 text-2xl font-bold">TOYP 2025</h1>
				</div>
				<nav>
					<ul class="flex space-x-6 text-gray-300">
						<li>
							<a href="#sobre" class="hover:text-white">Sobre</a>
						</li>
						<li>
							<a href="#categorias" class="hover:text-white"
								>Categorías</a
							>
						</li>
						<li>
							<a href="#agenda" class="hover:text-white">Agenda</a
							>
						</li>
						<li>
							<a href="#postula" class="hover:text-white"
								>Postula</a
							>
						</li>
					</ul>
				</nav>
			</div>
		</header>

		<!-- Hero -->
		<section id="sobre">
			<HeroGeometric
				client:load
				badge="Inscripciones abiertas"
				title1="Los 10 Jóvenes"
				title2="Más Sobresalientes"
			/>
		</section>

		<!-- Categorías (FeaturesSectionWithHoverEffects) -->
		<section id="categorias" class="bg-[#121214] py-16">
			<div class="container mx-auto px-4">
				<h2 class="text-3xl font-semibold mb-8 text-white">
					Categorías
				</h2>
				<FeaturesSectionWithHoverEffects
					client:load
					items={categories}
				/>
			</div>
		</section>

		<!-- Agenda -->
		<section id="agenda" class="bg-[#121214] py-16">
			<div class="container mx-auto px-4">
				<h2 class="text-3xl font-semibold mb-6 text-white">Agenda</h2>
                                <AgendaTimeline client:load items={agendaItems} />
                        </div>
                </section>

		<!-- Formulario -->
		<section id="postula" class="py-16 bg-[#18181b]">
			<div class="container mx-auto px-4">
				<h2 class="text-3xl font-semibold mb-6 text-white">
					Postula tu Candidatura
				</h2>
				<div
					class="aspect-w-16 aspect-h-9 rounded-2xl overflow-hidden shadow-lg"
				>
					<iframe
						src="https://docs.google.com/forms/d/e/FORM_ID/viewform?embedded=true"
						class="w-full h-full"
						frameborder="0"
						marginheight="0"
						marginwidth="0">Cargando…</iframe
					>
				</div>
			</div>
		</section>

		<!-- Footer -->
		<footer class="bg-[#18181b] py-8">
			<div class="container mx-auto px-4 text-center">
				<img
					src="/logo-jci-white.svg"
					alt="JCI"
					class="h-8 mx-auto mb-4"
				/>
				<p class="text-gray-400 mb-4">
					Developing Leaders for a Changing World
				</p>
				<div class="flex justify-center space-x-4">
					<a
						href="https://facebook.com"
						class="text-gray-400 hover:text-white">Facebook</a
					>
					<a
						href="https://instagram.com"
						class="text-gray-400 hover:text-white">Instagram</a
					>
					<a
						href="https://jci.org"
						class="text-gray-400 hover:text-white">jci.org</a
					>
				</div>
				<p class="mt-6 text-sm text-gray-500">
					&copy; 2025 JCI Santo Domingo Tsáchilas
				</p>
			</div>
		</footer>
	</body>
</html>
